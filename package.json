{
  "name": "codebase-next",
  "description": "This template will help you get started with Next in Turbopack",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "HXRRY",
    "email": "harrydng1209@gmail.com",
    "url": "https://github.com/harrydng1209"
  },
  "engines": {
    "node": ">= 22",
    "pnpm": ">= 10",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "bun": "please-use-pnpm"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "format": "prettier . --write",
    "lint": "eslint . --fix",
    "type-check": "tsc --build --force",
    "check-all": "run-p format lint type-check",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky",
    "precommit": "lint-staged && validate-branch-name"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm run format",
      "pnpm run lint",
      "git add ."
    ]
  },
  "validate-branch-name": {
    "pattern": "^(feature|bugfix|hotfix|release)/.+|(master)$"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "antd": "^5.23.0",
    "axios": "^1.7.9",
    "dayjs": "^1.11.13",
    "lodash-es": "^4.17.21",
    "next": "^15.2.5",
    "next-intl": "^4.0.2",
    "qs": "^6.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-hook-form-antd": "^1.1.3",
    "string-template": "^1.0.0",
    "usehooks-ts": "^3.1.1",
    "uuid": "^11.0.3",
    "yup": "^1.6.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.18.0",
    "@svgr/webpack": "^8.1.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20",
    "@types/qs": "^6.9.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/string-template": "^1.0.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.18.0",
    "eslint-config-next": "15.2.5",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-perfectionist": "^4.6.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.5.3",
    "prettier": "^3.4.2",
    "sass": "1.77.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "typescript-eslint": "^8.20.0",
    "validate-branch-name": "^1.3.1",
    "webpack": "^5.99.5"
  }
}
